<p id="notice"><%= notice %></p>

<h1>Sandboxes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sandbox type</th>
      <th>Description</th>
      <th>Start date</th>
      <th>Expected end date</th>
      <th>End date</th>
      <th>Owner</th>
      <th>Owner team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sandboxes.each do |sandbox| %>
      <tr>
        <td><%= sandbox.name %></td>
        <td><%= sandbox.sandbox_type %></td>
        <td><%= sandbox.description %></td>
        <td><%= sandbox.start_date %></td>
        <td><%= sandbox.expected_end_date %></td>
        <td><%= sandbox.end_date %></td>
        <td><%= sandbox.owner %></td>
        <td><%= sandbox.owner_team %></td>
        <td><%= link_to 'Show', sandbox %></td>
        <td><%= link_to 'Edit', edit_sandbox_path(sandbox) %></td>
        <td><%= link_to 'Destroy', sandbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

